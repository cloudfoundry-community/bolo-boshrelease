#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/opentsdb/helpers/ctl_setup.sh 'opentsdb'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap opentsdb2bolo \
         -F<% if p('bolo.opentsdb.debug') %>vvvv<% end %> \
         --listen '<%= p('bolo.opentsdb.bind') %>' \
         --submit tcp://<%= p('bolo.submission.address') %>:<%= p('bolo.submission.port') %>
         >>$LOG_DIR/$JOB_NAME.log 2>&1
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: opentsdb_ctl {start|stop}"

    ;;

esac
exit 0
