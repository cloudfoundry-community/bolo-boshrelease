check process influxdb
  with pidfile /var/vcap/sys/run/influxdb/influxdb.pid
  start program "/var/vcap/jobs/influxdb/bin/monit_debugger influxdb '/var/vcap/jobs/influxdb/bin/influxdb start'"
  stop  program "/var/vcap/jobs/influxdb/bin/monit_debugger influxdb '/var/vcap/jobs/influxdb/bin/influxdb stop'"
  group vcap

check process subscriber
  with pidfile /var/vcap/sys/run/influxdb/subscriber.pid
  start program "/var/vcap/jobs/influxdb/bin/monit_debugger subscriber '/var/vcap/jobs/influxdb/bin/subscriber start'"
  stop  program "/var/vcap/jobs/influxdb/bin/monit_debugger subscriber '/var/vcap/jobs/influxdb/bin/subscriber stop'"
  group vcap
