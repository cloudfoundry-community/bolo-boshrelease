#!/bin/bash
set -eu
source /var/vcap/jobs/influxdb/helpers/ctl_setup.sh influxdb subscriber
export LANG=en_US.UTF-8

case $1 in
  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap bolo2influxdb \
         -F<% if p('bolo.influx.debug') %>vvvv<% end %> \
         --influxdb 127.0.0.1:8089 \
         -e tcp://<%= p('bolo.subscription.address') %>:<%= p('bolo.subscription.port') %> \
         --submit tcp://<%= p('bolo.submission.address') %>:<%= p('bolo.submission.port') %>
         >>$LOG_DIR/$JOB_NAME.log 2>&1
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: subscriber {start|stop}"
    ;;

esac
exit 0
