#!/bin/bash
set -eu
source /var/vcap/jobs/influxdb/helpers/ctl_setup.sh influxdb
export LANG=en_US.UTF-8

case $1 in
  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    mkdir -p        $STORE_DIR/data /var/vcap/data/$JOB_NAME/wal
    chown vcap:vcap $STORE_DIR/data /var/vcap/data/$JOB_NAME/wal
    chmod 775       $STORE_DIR/data /var/vcap/data/$JOB_NAME/wal

   (while ! echo "CREATE USER \"grafana\" WITH PASSWORD '<%= p('bolo.influx.grafana_secret') %>'; GRANT READ ON bolo TO grafana;" | /var/vcap/packages/influxdb/bin/influx; do
       sleep 3; done) &
    exec chpst -u vcap:vcap influxd run -config $JOB_DIR/config/influxdb.conf \
         >>$LOG_DIR/$JOB_NAME.log 2>&1
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: influxdb {start|stop}"
    ;;

esac
exit 0
