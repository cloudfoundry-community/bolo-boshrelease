#!/bin/bash
set -eu

# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package

# curl -Lo blobs/grafana/grafana-3.1.1-1470047149.linux-x64.tar.gz https://grafanarel.s3.amazonaws.com/builds/grafana-3.1.1-1470047149.linux-x64.tar.gz
VERSION=3.1.1-1470047149
tar -xzvf grafana/grafana-${VERSION}.linux-x64.tar.gz
cd grafana-${VERSION}
rm bin/*.md5
cp -a bin/ public/ vendor/ conf/ ${BOSH_INSTALL_TARGET}
